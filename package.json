{
  "name": "@nodecfdi/tsconfig",
  "description": "Archivos de configuraci√≥n de TypeScript base para proyectos NodeCfdi",
  "version": "1.6.0",
  "type": "module",
  "files": [
    "tsconfig.app.json",
    "tsconfig.client.json",
    "tsconfig.package.json",
    "tsconfig.base.json"
  ],
  "exports": {
    "./tsconfig.app.json": "./tsconfig.app.json",
    "./tsconfig.client.json": "./tsconfig.client.json",
    "./tsconfig.package.json": "./tsconfig.package.json",
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "scripts": {
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "release-it": "^17.6.0",
    "release-it-pnpm": "^4.6.3"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/tsconfig",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/tsconfig.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/tsconfig/issues"
  },
  "keywords": [
    "tsconfig",
    "typescript",
    "nodecfdi"
  ],
  "packageManager": "pnpm@9.9.0",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): :tada: ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "release-it-pnpm": {},
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# @nodecfdi/tsconfig Changelog",
        "preset": {
          "name": "conventionalcommits"
        }
      }
    }
  }
}
